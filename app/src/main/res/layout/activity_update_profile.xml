<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".UpdateProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UselessLeaf">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:background="@color/dark_blue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_arrow_small_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:layout_toStartOf="@+id/back"
                android:layout_toEndOf="@+id/back"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/Edit_Profile"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/back"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@color/back_ground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                tools:ignore="ObsoleteLayoutParam,ScrollViewSize">

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints,UselessLeaf">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/people_imge"
                        tools:ignore="ExtraText,UselessParent,ImageContrastCheck" />

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignEnd="@+id/circleImageView"
                        android:layout_alignBottom="@+id/circleImageView"
                        android:layout_marginStart="170dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/camera_bg">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/ic_photo_camera"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_update_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_layout"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:elevation="10dp"
                    android:layout_marginVertical="30dp"
                    android:backgroundTint="@color/card_view"
                    android:shadowColor="@color/black"
                    app:cardCornerRadius="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="ScrollViewSize">

                <androidx.appcompat.widget.AppCompatCheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_marginStart="25dp"
                    android:text="@string/Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/text_bg"
                    android:fontFamily="@font/opensans_bold"
                    android:inputType="text"
                    android:hint="@string/Name"
                    android:padding="10dp"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text"
                    android:textSize="18sp"
                    app:cardCornerRadius="10dp"
                    tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />

                <androidx.appcompat.widget.AppCompatCheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_marginStart="25dp"
                    android:text="@string/User_Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/text_bg"
                    android:fontFamily="@font/opensans_bold"
                    android:hint="@string/user_name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text"
                    android:textSize="18sp"
                    app:cardCornerRadius="10dp"
                    tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />

                <androidx.appcompat.widget.AppCompatCheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_marginStart="25dp"
                    android:text="@string/Email"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/text_bg"
                    android:fontFamily="@font/opensans_bold"
                    android:hint="@string/Email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text"
                    android:textSize="18sp"
                    app:cardCornerRadius="10dp"
                    tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />

                <androidx.appcompat.widget.AppCompatCheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_marginStart="25dp"
                    android:text="@string/Mobile"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/text_bg"
                    android:fontFamily="@font/opensans_bold"
                    android:hint="Mobile"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text"
                    android:textSize="18sp"
                    app:cardCornerRadius="10dp"
                    tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />

                <androidx.appcompat.widget.AppCompatCheckedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_marginStart="25dp"
                    android:text="@string/Address"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/text_bg"
                    android:fontFamily="@font/opensans_bold"
                    android:hint="@string/Address"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text"
                    android:textSize="18sp"
                    app:cardCornerRadius="10dp"
                    tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            tools:ignore="TooDeepLayout">


                            <androidx.appcompat.widget.AppCompatCheckedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_bold"
                                android:layout_marginStart="25dp"
                                android:text="@string/Gender"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,RtlSymmetry,TooDeepLayout" />

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/text_bg"
                                android:fontFamily="@font/opensans_bold"
                                android:padding="10dp"
                                android:paddingStart="15dp"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical">


                            <androidx.appcompat.widget.AppCompatCheckedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_bold"
                                android:layout_marginStart="25dp"
                                android:text="@string/Age"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,RtlSymmetry" />

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/text_bg"
                                android:fontFamily="@font/opensans_bold"
                                android:padding="10dp"
                                android:paddingStart="15dp"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatCheckedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensans_bold"
                        android:layout_marginStart="25dp"
                        android:text="@string/Activity_level"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlSymmetry" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/text_bg"
                        android:fontFamily="@font/opensans_bold"
                        android:padding="10dp"
                        android:paddingStart="15dp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />

                    <androidx.appcompat.widget.AppCompatCheckedTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensans_bold"
                        android:layout_marginStart="25dp"
                        android:text="@string/Goal"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlSymmetry" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/text_bg"
                        android:fontFamily="@font/opensans_bold"
                        android:padding="10dp"
                        android:paddingStart="15dp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">


                            <androidx.appcompat.widget.AppCompatCheckedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_bold"
                                android:layout_marginStart="25dp"
                                android:text="@string/Height"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,RtlSymmetry" />

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/text_bg"
                                android:fontFamily="@font/opensans_bold"
                                android:padding="10dp"
                                android:paddingStart="15dp"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical">


                            <androidx.appcompat.widget.AppCompatCheckedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_bold"
                                android:layout_marginStart="25dp"
                                android:text="@string/Weight"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,RtlSymmetry" />

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/text_bg"
                                android:fontFamily="@font/opensans_bold"
                                android:padding="10dp"
                                android:paddingStart="15dp"
                                android:textColor="@color/black"
                                tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
                </androidx.cardview.widget.CardView>
                </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_update_profile"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    tools:ignore="NotSibling,UselessParent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginVertical="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/btn_bg"
                        android:elevation="@dimen/button_elevation"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:shadowColor="@color/black"
                        android:text="@string/Update"
                        android:textColor="@color/white"
                        android:textSize="@dimen/button_text_size"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
